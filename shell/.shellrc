# vim: filetype=sh
# ==============================================================================
# Set up any custom aliases
# ==============================================================================

[[ -s "$HOME/.profile" ]] && source "$HOME/.profile"
[[ -s "$HOME/.aliases" ]] && source "$HOME/.aliases"
[[ -s "$HOME/.functions" ]] && source "$HOME/.functions"

# ==============================================================================
# Utilities
# ==============================================================================
# Helps with some shit with LESS
export LESS="FSRX"
eval "$(atuin init zsh)"
eval "$(mise activate zsh)"
eval "$(starship init zsh)"
eval "$(zoxide init zsh)"

# ==================
# Functions
# ==================

# Colorized man pages
man() {
  LESS_TERMCAP_mb=$'\e'"[1;31m" \
  LESS_TERMCAP_md=$'\e'"[1;31m" \
  LESS_TERMCAP_me=$'\e'"[0m" \
  LESS_TERMCAP_se=$'\e'"[0m" \
  LESS_TERMCAP_so=$'\e'"[1;44;33m" \
  LESS_TERMCAP_ue=$'\e'"[0m" \
  LESS_TERMCAP_us=$'\e'"[1;32m" \
  command man "$@"
}

# ==============
# Exports
# ==============
export EDITOR='nvim'
export PATH="$PATH:$HOME/.local/bin"
export TERM="xterm-256color"

################################################################################
# TLDR
#   @see https://github.com/tldr-pages/tldr
################################################################################
export TLDR_COLOR_BLANK="white"
export TLDR_COLOR_NAME="cyan"
export TLDR_COLOR_DESCRIPTION="white"
export TLDR_COLOR_EXAMPLE="green"
export TLDR_COLOR_COMMAND="red"
export TLDR_COLOR_PARAMETER="white"
export TLDR_CACHE_ENABLED=1
export TLDR_CACHE_MAX_AGE=720


################################################################################
# FZF
#   @see https://github.com/junegunn/fzf
################################################################################
export FZF_CTRL_T_OPTS="--preview '$show_file_or_dir_preview'"
export FZF_ALT_C_OPTS="--preview 'eza --tree --icons=always --color=always {} | head -200'"

# Advanced customization of fzf options via _fzf_comprun function
# - The first argument to the function is the name of the command.
# - You should make sure to pass the rest of the arguments to fzf.
_fzf_comprun() {
  local command=$1
  shift

  case "$command" in
    cd)           fzf --preview 'eza --tree --icons=always --color=always {} | head -200' "$@" ;;
    export|unset) fzf --preview "eval 'echo \${}'"         "$@" ;;
    ssh)          fzf --preview 'dig {}'                   "$@" ;;
    *)            fzf --preview "$show_file_or_dir_preview" "$@" ;;
  esac
}

[[ -s "$HOME/.fzf.sh" ]] && source "$HOME/.fzf.sh"
[[ -s "$HOME/.shellrc.local" ]] && source "$HOME/.shellrc.local"
