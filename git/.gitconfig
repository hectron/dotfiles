[user]
  name  = Hector Rios
  email = that.hector@gmail.com
[core]
  whitespace = error
[color]
  ui = auto
  branch = auto
  diff = true
  status = true
[init]
  defaultBranch = main
[core]
  editor = nvim
	excludesFile = ~/.gitignore_global
[fetch]
  prune = true
[push]
  autoSetupRemote = true
  default = current
  followTags = true

[pull]
  default = current
  rebase = true
[rebase]
  autosquash = true
[grep]
  lineNumber = true
[alias]
  # shorthands
  br = branch
  co = checkout
  ci = commit
  st = status
  ap = add -p

  # typos
  comimt  = commit
  comit   = commit
  stats   = status
  stauts  = status
  pul     = pull
  ull     = pull
  dif     = diff
  og      = log
  lo      = log
  lg      = log

  # extra tools
  cb = !git branch | grep '*' | awk '{print $2}'
  opush = !git push --set-upstream origin $(git cb)
  ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
  ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
  lb = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
  fr = !git reset origin/$(git cb) --hard
  or = !git reset origin/$(git cb) --hard
  unstage = reset HEAD --
  last = log -1 HEAD
  awk = "!f() { git log -p -S\"$1\"; }; f"

  unmerged = branch --no-merge
  merged = "!git branch -l --format='%(refname:short)' | grep -v -e '^master$' -e '^main$' | while read branch; do [ -z \"$(git diff origin/HEAD...${branch})\" ] && echo \"${branch}\"; done"
[alias "push"]
  please = push --force-with-lease

[status]
  branch = true
  showStash = true
  showUntrackedFiles = all

[diff]
  context = 3
  renames = copies
  interHunkContext = 10

[pager]
  diff = diff-so-fancy | $PAGER

[diff-so-fancy]
  markEmptyLines = false

[url "git@github.com:hectron/"]
  insteadOf = "me:"
[url "git@github.com"]
  insteadOf = "gh:"
